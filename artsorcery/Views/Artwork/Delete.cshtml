@model Artwork

<div class="flex items-center justify-center bg-base-200">
    <div class="z-20 min-h-screen flex-col overflow-hidden p-4 text-2xl">
        <!-- component -->
        <section class="mx-auto mt-20 max-w-4xl rounded-md border bg-base-100 p-6 shadow-md">
            <h2 class="text-lg font-semibold capitalize text-base-content pb-5">
                Delete Artwork
            </h2>

            <p class="text-base">Are you sure you want to delete this artwork?</p>
            <p class="text-base">Title: @Model.Title</p>
            <p class="text-base">Description: @Model.Description</p>

            <form method="post" action="@Url.Action("DeleteConfirmed", "Artwork", new { id = Model.Id })">
                <div class="mt-6 flex justify-end gap-2">
                    <button type="submit" class="btn btn-error">Delete</button>
                    <a href="@Url.Action("Profile", "Artist")" class="btn">Cancel</a>
                </div>
            </form>
        </section>
    </div>
</div>
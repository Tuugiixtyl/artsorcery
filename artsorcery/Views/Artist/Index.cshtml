@{
    ViewData["Title"] = "Home";
}

<h2>Welcome to the Artsorcery Application</h2>

<p>Choose an option:</p>

<div class="row">
    <div class="col-md-6">
        <h3>Login</h3>
        <p>Already have an account? Login to access your profile.</p>
        <p>
            <a asp-controller="Artist" asp-action="Login" class="btn btn-primary">Login</a>
        </p>
    </div>
    <div class="col-md-6">
        <h3>Register</h3>
        <p>Don't have an account yet? Register to create a new artist profile.</p>
        <p>
            <a asp-controller="Artist" asp-action="Register" class="btn btn-primary">Register</a>
        </p>
    </div>
</div>
